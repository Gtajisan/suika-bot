<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suika Bot Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="navbar">
        <div class="container">
            <div class="logo">üçà Suika Bot</div>
            <nav>
                <a href="/dashboard" class="active">Dashboard</a>
                <a href="/commands">Commands</a>
                <a href="https://github.com/Gtajisan/suika-bot" target="_blank">GitHub</a>
            </nav>
        </div>
    </div>

    <div class="container main">
        <h1>Dashboard</h1>
        <p class="subtitle">Welcome! Here's what's happening with Suika Bot.</p>

        <!-- Bot Info Card -->
        <div class="card bot-info">
            <div class="bot-header">
                <div class="bot-details">
                    <h2>@<%= stats.botUsername %></h2>
                    <p>Bot ID: <%= stats.botId %></p>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number"><%= stats.totalUsers %></div>
                <div class="stat-label">Total Users</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.totalCommands %></div>
                <div class="stat-label">Commands</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">$<%= stats.totalMoney.toLocaleString() %></div>
                <div class="stat-label">Wallet Total</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">$<%= stats.totalBank.toLocaleString() %></div>
                <div class="stat-label">Bank Total</div>
            </div>
        </div>

        <!-- System Status -->
        <div class="card system-status">
            <h3>‚öôÔ∏è System Status</h3>
            <div class="status-grid">
                <div class="status-item">
                    <span class="status-label">Uptime</span>
                    <span class="status-value"><%= stats.uptime %></span>
                </div>
                <div class="status-item">
                    <span class="status-label">Memory</span>
                    <span class="status-value"><%= stats.memory %> MB</span>
                </div>
                <div class="status-item">
                    <span class="status-label">Platform</span>
                    <span class="status-value"><%= platform %></span>
                </div>
                <div class="status-item">
                    <span class="status-label">Node.js</span>
                    <span class="status-value"><%= nodeVersion %></span>
                </div>
            </div>
        </div>

        <!-- Top Users -->
        <div class="card leaderboard">
            <h3>üèÜ Top Users by Balance</h3>
            <table class="users-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User ID</th>
                        <th>Wallet</th>
                        <th>Bank</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% topUsers.forEach((user, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><code><%= user.telegramId %></code></td>
                        <td>$<%= user.money.toLocaleString() %></td>
                        <td>$<%= user.bank.toLocaleString() %></td>
                        <td><strong>$<%= (user.money + user.bank).toLocaleString() %></strong></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Quick Actions -->
        <div class="card quick-actions">
            <h3>Quick Actions</h3>
            <div class="actions-grid">
                <a href="/commands" class="action-btn">üéÆ View All Commands</a>
                <a href="https://t.me/roseb_bot" target="_blank" class="action-btn">üí¨ Chat with Bot</a>
                <a href="https://github.com/Gtajisan/suika-bot" target="_blank" class="action-btn">‚≠ê GitHub Repository</a>
            </div>
        </div>
    </div>

    <footer>
        <p>üçà Suika Bot ‚Ä¢ Built by Gtajisan ‚Ä¢ <a href="/commands">View Commands</a></p>
    </footer>
</body>
</html>
