<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Commands - Suika Bot</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="navbar">
        <div class="container">
            <div class="logo">üçà Suika Bot</div>
            <nav>
                <a href="/dashboard">Dashboard</a>
                <a href="/commands" class="active">Commands</a>
                <a href="https://github.com/Gtajisan/suika-bot" target="_blank">GitHub</a>
            </nav>
        </div>
    </div>

    <div class="container main">
        <h1>üéÆ All Commands</h1>
        <p class="subtitle">Total Commands: <%= commands.length %></p>

        <!-- Category Filters -->
        <div class="filters">
            <button class="filter-btn active" onclick="filterCategory('all')">All</button>
            <% categories.forEach(cat => { %>
                <button class="filter-btn" onclick="filterCategory('<%= cat %>')"><%= cat.charAt(0).toUpperCase() + cat.slice(1) %></button>
            <% }) %>
        </div>

        <!-- Commands Grid -->
        <div class="commands-grid">
            <% commands.forEach(cmd => { %>
                <div class="command-card" data-category="<%= cmd.category %>">
                    <div class="command-header">
                        <h3>/<%= cmd.name %></h3>
                        <span class="category-badge"><%= cmd.category %></span>
                    </div>
                    <p class="command-desc"><%= cmd.description %></p>
                    <% if (cmd.aliases && cmd.aliases.length > 0) { %>
                        <p class="command-aliases">
                            <strong>Aliases:</strong> <%= cmd.aliases.map(a => '/' + a).join(', ') %>
                        </p>
                    <% } %>
                    <p class="command-author">By: <%= cmd.author %></p>
                </div>
            <% }) %>
        </div>
    </div>

    <footer>
        <p>üçà Suika Bot ‚Ä¢ Built by Gtajisan</p>
    </footer>

    <script>
        function filterCategory(category) {
            const cards = document.querySelectorAll('.command-card');
            cards.forEach(card => {
                if (category === 'all' || card.dataset.category === category) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });

            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }
    </script>
</body>
</html>
